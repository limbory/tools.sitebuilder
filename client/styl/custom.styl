/* base stylesheet */
  html
    overflow-y scroll
    font-family $base-font-family
    font-size $base-font-size
    line-height $base-line-height
  body
    font inherit
    margin 0
    color $text-color
  p 
    text-align justify
    word-break break-word
  a 
    color $link-color
    text-decoration none
    &hover 
      text-decoration underline
  h1, h2, h3, h4, h5, h6
    font-weight 300
    word-break break-word
  blockquote 
    font-style italic
    padding-left 1rem
    border-left 3px solid $border-color
  img 
    max-width 100%
  table 
    border-collapse separate
    border-spacing 0
    max-width 100%
    width 100%
  th, td
    padding 0.5rem
    line-height inherit
  th 
    text-align left
    vertical-align bottom
    border-bottom 2px solid $border-color
  td 
    vertical-align top
    border-bottom 1px solid $border-color
  pre 
    padding 1.25rem
    overflow-x auto
  code 
    font-family 'Courier New', Consolas, monopace
    tab-size 4
  hr 
    border none
    border-top 2px solid $border-color


/* main stylesheet */
main 
  max-width 48rem
  margin 0 auto 3rem
  padding 0 2rem
.site-header 
  .site-title 
    font-weight 300
    & > a 
      color $text-color
      text-decoration none
  .site-nav 
    & > a 
      color $text-color
      &hover 
        text-decoration none
      &.active 
        border-bottom 2px solid #666
      + a 
        margin-left 1rem
.posts, .collections .list
  list-style none
  padding 0
  & > li 
    line-height 1.75
    span 
      color $meta-color
      margin-right 1.5rem
      font-size $small-font-size
    a 
      color $text-color
      text-decoration none
.post 
  position relative
  .post-header 
    text-align center
    margin-bottom 0
  .post-meta 
    margin 0
    text-align center
    color $meta-color
    font-size $small-font-size
.collections
  .list
    list-style disc outside
    li a
      color $link-color
      &:visited
        color $color-teal
      &:hover
        text-decoration underline
@media screen and (max-width: 48rem) 
  .site-header 
    .site-title,
    .site-nav 
      text-align center

