@charset 'utf-8'

/* css-reset */
global-reset()

/* 自定义字体 */

/* 通用样式 */
.clearfix,
.cf
  clearfix()
.fl
  float left
.fr
  float right
  
.rel
  position relative
.abs
  position absolute
.fix
  position fixed
.tz
  top 0
.bz
  bottom 0
.lz
  left 0
.rz
  right 0
.cover
  width 100%
  height 100%
  top 0
  left 0
  z-index 20000
  
.listn
  list-style none
.overh
  overflow hidden

.blo
  display block
.inl
  display inline-block
.tb
  display table
  width 100%
  height 100%
.tbc
  display table-cell
  vertical-align middle
.hidden
  display none!important
.tl
  text-align left
.tc
  text-align center
.tr
  text-align right
.circle
  border-radius 50%
  
i.icon
  display inline-block
  background transparent center no-repeat
  background-size 1em
  text-align center
  width 1.5em
  &.chat
    background-image server-url('images/icon/icon_livechat_web.png')

