extends ../layout/default

append title
  title {% if page.title %} {{ page.title }} {% else %} {{ site.title }} {% endif %}
append description
  meta(name='keywords', content='{{ site.keywords }}')
  meta(name='description', content='{{ site.description }}')
  link(rel='shortcut icon', href='./assets/images/favicon.ico')
append css
  link(rel='stylesheet', href='./dist/css/gh-pages/index.css')
  script
    include ../../js/components/dynamicRootFonts-width.js
append js
  | {% if page.script %}
  script(src='{{ page.script }}')
  | {% endif %}
append content
  | {{ content }}